<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cpb="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:id="@+id/center_layout"
    android:orientation="vertical"
    android:padding="0dip" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:padding="0dip" >

        <ImageView
            android:id="@+id/operation_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/video_volumn_bg"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/stat_and_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/play_pause"
            android:visibility="gone" />
        <com.ayearn.playerlib.controller.progress.CircularProgressBar
            android:id="@+id/circleProgressBar"
            cpb_sweep_speed="2.0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:indeterminate="true"
            android:indeterminateOnly="false"
            cpb:cpb_color="#EB6610"
            tools:ignore="DuplicateIds" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/videoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/video_back_normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="@dimen/w_15"
                android:layout_marginRight="@dimen/w_15"
                android:textColor="@color/white"
                android:textSize="@dimen/h_20"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/videoForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/video_forward_normal"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>