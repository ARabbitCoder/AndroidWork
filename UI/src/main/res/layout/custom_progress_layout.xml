<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/w_20"
        >
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/w_10"
            />
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/custom_progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_3"
            android:layout_below="@+id/progress_text"
            android:progressDrawable="@drawable/custom_style_progress"
            android:layout_marginBottom="@dimen/w_10"
            android:max="100"
            android:progress="0"
            />
        <TextView
            android:id="@+id/progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_progress"
            android:text="0%"
            />
        <TextView
            android:id="@+id/progress_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_progress"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/progress_controller"
        android:layout_width="@dimen/w_70"
        android:layout_height="@dimen/w_70"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/w_10"
        android:layout_marginRight="@dimen/w_10"
        android:src="@drawable/pause"
        />
</LinearLayout>
