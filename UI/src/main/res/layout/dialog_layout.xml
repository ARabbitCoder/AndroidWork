<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:background="@drawable/corner_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="@dimen/h_15"
        android:gravity="center"
        android:textColor="#151212"
        android:textSize="@dimen/h_30"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/w_20"
        android:layout_marginRight="@dimen/w_20"
        android:gravity="left|center"
        android:paddingBottom="@dimen/h_15"
        android:text="提示消息"
        android:textAlignment="center"
        android:textSize="@dimen/h_28"
        android:textColor="#151212" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <com.ayearn.ui.superview.SuperTextView
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#151212"
            android:textSize="@dimen/h_24"
            app:corner="@dimen/h_10"
            app:left_bottom_corner="true"
            app:right_bottom_corner="true"
            app:pressBgColor="#ae0a3faf"
            android:visibility="gone"
            />
        <com.ayearn.ui.superview.SuperTextView
            android:id="@+id/yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#151212"
            android:textSize="@dimen/h_24"
            app:corner="@dimen/h_10"
            app:left_bottom_corner="true"
            app:right_bottom_corner="true"
            app:pressBgColor="#ae0a3faf"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>

